{
  "sections": {
    "banner": {
      "type": "image-banner",
      "blocks": {
        "heading": {
          "type": "heading",
          "settings": {
            "heading": "{{ collection.title }}",
            "heading_size": "h1"
          }
        },
        "text": {
          "type": "text",
          "settings": {
            "text": "Browse our wide range of premium agricultural products and solutions",
            "text_style": "body"
          }
        }
      },
      "block_order": [
        "heading",
        "text"
      ],
      "settings": {
        "enable_carousel": false,
        "auto_rotate": true,
        "change_slides_speed": 5,
        "image": "",
        "image_overlay_opacity": 30,
        "image_height": "medium",
        "image_behavior": "none",
        "desktop_content_position": "middle-center",
        "desktop_content_alignment": "center",
        "show_text_box": true,
        "color_scheme": "scheme-1",
        "stack_images_on_mobile": true,
        "mobile_content_alignment": "center",
        "show_text_below": false
      }
    },
    "product-grid": {
      "type": "main-collection-product-grid",
      "settings": {
        "products_per_page": 16,
        "columns_desktop": 4,
        "color_scheme": "scheme-1",
        "image_ratio": "adapt",
        "image_shape": "default",
        "show_secondary_image": false,
        "show_vendor": false,
        "show_rating": false,
        "quick_add": "none",
        "enable_filtering": true,
        "filter_type": "horizontal",
        "enable_sorting": true,
        "columns_mobile": "1",
        "padding_top": 36,
        "padding_bottom": 36
      }
    }
  },
  "order": [
    "banner",
    "product-grid"
  ]
}
