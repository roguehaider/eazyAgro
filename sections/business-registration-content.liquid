{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient rich-text content-container section-{{ section.id }}-padding">
  <div class="rich-text__wrapper rich-text__wrapper--{{ section.settings.desktop_content_position }}{% if section.settings.full_width %} page-width{% endif %}">
    <div class="rich-text__blocks {{ section.settings.content_alignment }}">
      {%- if section.settings.intro_heading != blank -%}
        <h2 class="rich-text__heading rte inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {{ section.settings.intro_heading }}
        </h2>
      {%- endif -%}
      
      {%- if section.settings.intro_text != blank -%}
        <div class="rich-text__text rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {{ section.settings.intro_text }}
        </div>
      {%- endif -%}

      {%- if section.settings.show_why_partner -%}
        <div class="business-registration__section{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {%- if section.settings.why_heading != blank -%}
            <h3 class="business-registration__section-heading">{{ section.settings.why_heading }}</h3>
          {%- endif -%}
          
          {%- if section.blocks.size > 0 -%}
            <ul class="business-registration__benefits-list">
              {%- for block in section.blocks -%}
                {%- if block.type == 'benefit' -%}
                  <li class="business-registration__benefit-item" {{ block.shopify_attributes }}>
                    <span class="business-registration__checkmark">•</span>
                    <span class="business-registration__benefit-text">{{ block.settings.benefit_text }}</span>
                  </li>
                {%- endif -%}
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>
      {%- endif -%}

      {%- if section.settings.show_who_can_apply -%}
        <div class="business-registration__section{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {%- if section.settings.who_heading != blank -%}
            <h3 class="business-registration__section-heading">{{ section.settings.who_heading }}</h3>
          {%- endif -%}
          
          {%- if section.settings.who_text != blank -%}
            <p class="business-registration__section-text">{{ section.settings.who_text }}</p>
          {%- endif -%}
          
          {%- if section.blocks.size > 0 -%}
            <ul class="business-registration__benefits-list">
              {%- for block in section.blocks -%}
                {%- if block.type == 'business_type' -%}
                  <li class="business-registration__benefit-item" {{ block.shopify_attributes }}>
                    <span class="business-registration__checkmark">•</span>
                    <span class="business-registration__benefit-text">{{ block.settings.business_type_text }}</span>
                  </li>
                {%- endif -%}
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>
      {%- endif -%}

      {%- if section.settings.registration_text != blank -%}
        <div class="business-registration__section{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          <div class="rich-text__text rte">
            {{ section.settings.registration_text }}
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

<style>
  .business-registration__section {
    margin-top: 3rem;
  }

  .business-registration__section-heading {
    font-size: 2.4rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: rgb(var(--color-foreground));
  }

  .business-registration__section-text {
    margin-bottom: 1.5rem;
    font-size: 1.6rem;
    line-height: 1.6;
  }

  .business-registration__benefits-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .business-registration__benefit-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 1.2rem;
    font-size: 1.6rem;
    line-height: 1.6;
  }

  .business-registration__checkmark {
    color: #6CA93A;
    font-weight: 700;
    font-size: 2rem;
    margin-right: 1rem;
    flex-shrink: 0;
    margin-top: 0.2rem;
  }

  .business-registration__benefit-text {
    flex: 1;
  }

  @media screen and (min-width: 750px) {
    .business-registration__section-heading {
      font-size: 2.8rem;
    }
  }
</style>

