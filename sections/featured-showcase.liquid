{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .features-showcase {
    background-color: #F7F6F1;
  }
  
  .features-showcase .page-width {
    max-width: 1600px;
  }

  .features-showcase__heading-wrapper {
    margin-bottom: 4rem;
    text-align: center;
  }

  .features-showcase__heading {
    margin: 0;
    color: #2D423D;
    font-weight: 800;
  }

  .features-showcase__features-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .features-showcase__feature-block {
    background-color: white;
    padding: 2.5rem;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-align: center;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .features-showcase__feature-block:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  }

  .features-showcase__feature-icon {
    width: 48px;
    height: 48px;
    margin: 0 auto 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #6CA93A;
  }

  .features-showcase__feature-icon svg {
    width: 100%;
    height: 100%;
    stroke: currentColor;
    fill: currentColor;
  }

  .features-showcase__feature-title {
    font-size: 1.6rem;
    font-weight: 700;
    color: #2D423D;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .features-showcase__feature-description {
    font-size: 1.4rem;
    color: rgba(var(--color-foreground), 0.75);
    line-height: 1.6;
    margin-bottom: 0;
  }

  @media screen and (max-width: 989px) {
    .features-showcase__features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .features-showcase__features-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .features-showcase__heading-wrapper {
        margin-bottom: 3rem;
    }

    .features-showcase__feature-block {
      padding: 2rem;
    }

    .features-showcase__feature-icon {
      width: 40px;
      height: 40px;
      margin-bottom: 1.2rem;
    }
    
    .features-showcase .page-width {
      max-width: 100%;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }} features-showcase">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <div class="features-showcase__heading-wrapper center">
        <h2 class="features-showcase__heading {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
      </div>
    {%- endif -%}

    <div class="features-showcase__content">
      <div class="features-showcase__features-grid">
        {%- for block in section.blocks -%}
          {%- if block.type == 'feature' -%}
            <div class="features-showcase__feature-block" {{ block.shopify_attributes }}>
              {%- if block.settings.icon_svg != blank -%}
                <div class="features-showcase__feature-icon">
                  {{ block.settings.icon_svg }}
                </div>
              {%- elsif block.settings.icon_text != blank -%}
                <div class="features-showcase__feature-icon" style="font-size: 3.2rem;">
                  {{ block.settings.icon_text }}
                </div>
              {%- endif -%}
              
              {%- if block.settings.title != blank -%}
                <h3 class="features-showcase__feature-title">{{ block.settings.title }}</h3>
              {%- endif -%}
              
              {%- if block.settings.description != blank -%}
                <p class="features-showcase__feature-description">{{ block.settings.description }}</p>
              {%- endif -%}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

