{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .testimonials {
    background-color: #F7F6F1;
  }

  .testimonials__heading {
    text-align: center;
    color: #6CA93A;
    font-weight: 700;
    margin-bottom: 4rem;
  }

  .testimonials__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2.5rem;
    margin-bottom: 3rem;
  }

  .testimonials__card {
    background-color: white;
    padding: 2.5rem;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .testimonials__card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  }

  .testimonials__stars {
    display: flex;
    gap: 0.3rem;
    margin-bottom: 1.5rem;
  }

  .testimonials__star {
    width: 20px;
    height: 20px;
    color: #FFD700;
    fill: #FFD700;
  }

  .testimonials__star svg {
    width: 100%;
    height: 100%;
  }

  .testimonials__text {
    font-size: 1.5rem;
    line-height: 1.6;
    color: rgba(var(--color-foreground), 0.85);
    margin-bottom: 1.5rem;
    font-style: italic;
  }

  .testimonials__meta {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }

  .testimonials__author {
    font-size: 1.4rem;
    font-weight: 600;
    color: #2D423D;
    margin: 0;
  }

  .testimonials__date {
    font-size: 1.2rem;
    color: rgba(var(--color-foreground), 0.6);
  }

  .testimonials__button-wrapper {
    text-align: center;
    margin-top: 3rem;
  }

  .testimonials__button {
    display: inline-block;
    background-color: rgba(var(--color-foreground), 0.9);
    color: white;
    padding: 1.2rem 3rem;
    border-radius: 6px;
    text-decoration: none;
    font-size: 1.5rem;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .testimonials__button:hover {
    background-color: #6CA93A;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(108, 169, 58, 0.3);
  }

  @media screen and (max-width: 749px) {
    .testimonials__grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .testimonials__card {
      padding: 2rem;
    }

    .testimonials__heading {
      margin-bottom: 3rem;
      font-size: 2.4rem;
    }

    .testimonials__text {
      font-size: 1.4rem;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }} testimonials">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="testimonials__heading {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="testimonials__grid">
        {%- for block in section.blocks -%}
          {%- if block.type == 'testimonial' -%}
            <div class="testimonials__card" {{ block.shopify_attributes }}>
              <div class="testimonials__stars">
                {%- assign rating = block.settings.rating | default: 5 -%}
                {%- for i in (1..5) -%}
                  <div class="testimonials__star" {% if i > rating %}style="color: #dadada;"{% endif %}>
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                  </div>
                {%- endfor -%}
              </div>
              
              {%- if block.settings.text != blank -%}
                <p class="testimonials__text">{{ block.settings.text }}</p>
              {%- endif -%}
              
              <div class="testimonials__meta">
                {%- if block.settings.author != blank -%}
                  <span class="testimonials__author">{{ block.settings.author }}</span>
                {%- endif -%}
                {%- if block.settings.date != blank -%}
                  <span class="testimonials__date">{{ block.settings.date }}</span>
                {%- endif -%}
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
      <div class="testimonials__button-wrapper">
        <a href="{{ section.settings.button_link }}" class="testimonials__button" target="_blank" rel="noopener noreferrer">
          {{ section.settings.button_label }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

