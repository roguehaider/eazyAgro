{{ 'section-about-us.css' | asset_url | stylesheet_tag }}
{{ 'about-us-enhanced.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient about-us-section section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="about-us__container">
      <!-- Image Side (Left) -->
      <div class="about-us__image-wrapper">
        {%- if section.settings.image != blank -%}
          <div class="about-us__image media">
            <img
              src="{{ section.settings.image | image_url: width: 1200 }}"
              srcset="
                {%- if section.settings.image.width >= 375 -%}{{ section.settings.image | image_url: width: 375 }} 375w,{%- endif -%}
                {%- if section.settings.image.width >= 550 -%}{{ section.settings.image | image_url: width: 550 }} 550w,{%- endif -%}
                {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
                {%- if section.settings.image.width >= 1100 -%}{{ section.settings.image | image_url: width: 1100 }} 1100w,{%- endif -%}
                {%- if section.settings.image.width >= 1200 -%}{{ section.settings.image | image_url: width: 1200 }} 1200w,{%- endif -%}
                {{ section.settings.image | image_url }} {{ section.settings.image.width }}w
              "
              sizes="(min-width: 990px) 50vw, 100vw"
              alt="{{ section.settings.image.alt | escape }}"
              width="{{ section.settings.image.width }}"
              height="{{ section.settings.image.height }}"
              loading="lazy"
              class="about-us__image-element"
            >
          </div>
        {%- else -%}
          <div class="about-us__image-placeholder">
            <div class="about-us__placeholder-content">
              <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                <polyline points="21 15 16 10 5 21"></polyline>
              </svg>
              <p>Add your image here</p>
            </div>
          </div>
        {%- endif -%}
      </div>

      <!-- Content Side (Right) -->
      <div class="about-us__content-wrapper">
        {%- if section.settings.heading != blank -%}
          <h2 class="about-us__heading {{ section.settings.heading_size }}">
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <div class="about-us__description rte">
            {{ section.settings.description }}
          </div>
        {%- endif -%}

        {%- if section.settings.show_why_choose_us -%}
          <div class="about-us__why-choose">
            {%- if section.settings.why_heading != blank -%}
              <h3 class="about-us__why-heading">{{ section.settings.why_heading }}</h3>
            {%- endif -%}

            {%- if section.blocks.size > 0 -%}
              <ul class="about-us__features-list">
                {%- for block in section.blocks -%}
                  {%- if block.type == 'feature' -%}
                    <li class="about-us__feature-item" {{ block.shopify_attributes }}>
                      <span class="about-us__checkmark">âœ“</span>
                      <span class="about-us__feature-text">{{ block.settings.feature_text }}</span>
                    </li>
                  {%- endif -%}
                {%- endfor -%}
              </ul>
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- if section.settings.cta_text != blank -%}
          <p class="about-us__cta-text">{{ section.settings.cta_text }}</p>
        {%- endif -%}
      </div>
    </div>

    <!-- Still Unsure Section - Full Width -->
    {%- if section.settings.show_unsure_section -%}
      <div class="about-us__unsure-section about-us__unsure-section--full-width">
        {%- if section.settings.unsure_heading != blank -%}
          <h3 class="about-us__unsure-heading">{{ section.settings.unsure_heading }}</h3>
        {%- endif -%}

        {%- if section.settings.unsure_text != blank -%}
          <p class="about-us__unsure-text">{{ section.settings.unsure_text }}</p>
        {%- endif -%}

        {%- if section.settings.button_label != blank -%}
          <a href="{{ section.settings.button_link }}" class="about-us__button button">
            {{ section.settings.button_label }}
          </a>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "About Us / Why Choose Us",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "Leave empty to show placeholder - you can add image manually later"
    },
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Your Trusted Agricultural Products Supplier"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading Size"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>At EazyAgro, we provide premium-quality agricultural products and materials for every stage of your farming journey. Based in Mount Waverley, Victoria, we combine local expertise with nationwide shipping - delivering industry-leading products at competitive prices across Australia.</p>"
    },
    {
      "type": "header",
      "content": "Why Choose Us Section"
    },
    {
      "type": "checkbox",
      "id": "show_why_choose_us",
      "label": "Show Why Choose Us section",
      "default": true
    },
    {
      "type": "text",
      "id": "why_heading",
      "label": "Why Choose Us Heading",
      "default": "Why Choose Us?"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Let's bring your agricultural vision to life!"
    },
    {
      "type": "header",
      "content": "Still Unsure Section"
    },
    {
      "type": "checkbox",
      "id": "show_unsure_section",
      "label": "Show Still Unsure section",
      "default": true
    },
    {
      "type": "text",
      "id": "unsure_heading",
      "label": "Unsure Section Heading",
      "default": "Still Unsure?"
    },
    {
      "type": "text",
      "id": "unsure_text",
      "label": "Unsure Section Text",
      "default": "Book an appointment with one of our team members. We are here to assist you every step of the way."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Contact Us"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "feature_text",
          "label": "Feature Text",
          "default": "5+ Years Expertise - Reliable, Australia-wide service"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Us / Why Choose Us",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "feature_text": "5+ Years Expertise - Reliable, Australia-wide service"
          }
        },
        {
          "type": "feature",
          "settings": {
            "feature_text": "End-to-End Support - No stress, just results"
          }
        },
        {
          "type": "feature",
          "settings": {
            "feature_text": "Custom Solutions - Designed for your unique needs"
          }
        },
        {
          "type": "feature",
          "settings": {
            "feature_text": "Remote consultations available for all of Australia"
          }
        }
      ]
    }
  ]
}
{% endschema %}

