{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .cta-contact {
    background-color: #F7F6F1;
  }

  .cta-contact__card {
    text-align: center;
    padding: 4rem 2rem;
    background: white;
    border-radius: 16px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
    border: 1px solid rgba(108, 169, 58, 0.1);
    max-width: 1100px;
    margin: 0 auto;
  }

  .cta-contact__heading {
    font-size: 3.2rem;
    font-weight: 700;
    color: rgba(var(--color-foreground), 0.9);
    margin-bottom: 1.5rem;
  }

  .cta-contact__text {
    font-size: 1.8rem;
    line-height: 1.7;
    color: rgba(var(--color-foreground), 0.8);
    margin-bottom: 2.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-contact__button {
    display: inline-block;
    background: linear-gradient(135deg, #6CA93A 0%, #5A8A2E 100%);
    color: #FFFFFF;
    padding: 1.5rem 4rem;
    font-size: 1.8rem;
    font-weight: 600;
    border-radius: 50px;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 8px 24px rgba(108, 169, 58, 0.3);
    position: relative;
    overflow: hidden;
  }

  .cta-contact__button:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 32px rgba(108, 169, 58, 0.4);
    text-decoration: none;
    color: #FFFFFF;
  }

  .cta-contact__button:active,
  .cta-contact__button:focus {
    transform: translateY(0);
    outline: 2px solid #6CA93A;
    outline-offset: 3px;
  }

  @media screen and (max-width: 749px) {
    .cta-contact__card {
      padding: 3rem 1.5rem;
    }

    .cta-contact__heading {
      font-size: 2.4rem;
      margin-bottom: 1.2rem;
    }

    .cta-contact__text {
      font-size: 1.6rem;
      margin-bottom: 2rem;
    }

    .cta-contact__button {
      padding: 1.2rem 3rem;
      font-size: 1.6rem;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }} cta-contact">
  <div class="page-width">
    <div class="cta-contact__card">
      {%- if section.settings.heading != blank -%}
        <h2 class="cta-contact__heading {{ section.settings.heading_size }}">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <p class="cta-contact__text">{{ section.settings.text }}</p>
      {%- endif -%}

      {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
        <a href="{{ section.settings.button_link }}" class="cta-contact__button">
          {{ section.settings.button_label }}
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "CTA Contact",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Still Unsure?"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Book an appointment with one of our team members. We are here to assist you every step of the way."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Contact Us"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "info": "Link to your contact page"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "CTA Contact",
      "settings": {
        "heading": "Still Unsure?",
        "text": "Book an appointment with one of our team members. We are here to assist you every step of the way.",
        "button_label": "Contact Us",
        "button_link": "/pages/contact"
      }
    }
  ]
}
{% endschema %}

