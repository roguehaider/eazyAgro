{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}
{{ 'contact-enhanced.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient contact-page-wrapper">
  <!-- Floating Objects Container -->
  <div class="contact__floating-elements">
    <!-- Floating Leaves -->
    <div class="contact__floating-leaf contact__floating-leaf--1"></div>
    <div class="contact__floating-leaf contact__floating-leaf--2"></div>
    <div class="contact__floating-leaf contact__floating-leaf--3"></div>
    <div class="contact__floating-leaf contact__floating-leaf--4"></div>
    <div class="contact__floating-leaf contact__floating-leaf--5"></div>

    <!-- Floating Orbs -->
    <div class="contact__floating-orb contact__floating-orb--1"></div>
    <div class="contact__floating-orb contact__floating-orb--2"></div>
    <div class="contact__floating-orb contact__floating-orb--3"></div>

    <!-- Floating Dew Drops -->
    <div class="contact__floating-dew contact__floating-dew--1"></div>
    <div class="contact__floating-dew contact__floating-dew--2"></div>
    <div class="contact__floating-dew contact__floating-dew--3"></div>
    <div class="contact__floating-dew contact__floating-dew--4"></div>
    <div class="contact__floating-dew contact__floating-dew--5"></div>
  </div>

  <div class="contact contact--enhanced page-width page-width--narrow section-{{ section.id }}-padding">
    {%- if section.settings.heading != blank -%}
      <h2 class="title title-wrapper--no-top-margin inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ section.settings.heading }}
      </h2>
    {%- else -%}
      <h2 class="visually-hidden">{{ 'templates.contact.form.title' | t }}</h2>
    {%- endif -%}
    {%- liquid
      assign contact_form_class = 'isolate'
      if settings.animations_reveal_on_scroll
        assign contact_form_class = 'isolate scroll-trigger animate--slide-in'
      endif
    -%}
    {%- form 'contact', id: 'ContactForm', class: contact_form_class -%}
      {%- if form.posted_successfully? -%}
        <h2 class="form-status form-status-list form__message" tabindex="-1" autofocus>
          {{- 'icon-success.svg' | inline_asset_content -}}
          {{ 'templates.contact.form.post_success' | t }}
        </h2>
      {%- elsif form.errors -%}
        <div class="form__message">
          <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>
            {{- 'icon-error.svg' | inline_asset_content -}}
            {{ 'templates.contact.form.error_heading' | t }}
          </h2>
        </div>
        <ul class="form-status-list caption-large" role="list">
          <li>
            <a href="#ContactForm-email" class="link">
              {{ form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email }}
            </a>
          </li>
        </ul>
      {%- endif -%}
      <div class="contact__fields">
        <div class="field">
          <input
            class="field__input"
            autocomplete="name"
            type="text"
            id="ContactForm-name"
            name="contact[{{ 'templates.contact.form.name' | t }}]"
            value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
            placeholder="{{ 'templates.contact.form.name' | t }}"
          >
          <label class="field__label" for="ContactForm-name">{{ 'templates.contact.form.name' | t }}</label>
        </div>
        <div class="field field--with-error">
          <input
            autocomplete="email"
            type="email"
            id="ContactForm-email"
            class="field__input"
            name="contact[email]"
            spellcheck="false"
            autocapitalize="off"
            value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
            aria-required="true"
            {% if form.errors contains 'email' %}
              aria-invalid="true"
              aria-describedby="ContactForm-email-error"
            {% endif %}
            placeholder="{{ 'templates.contact.form.email' | t }}"
          >
          <label class="field__label" for="ContactForm-email">
            {{- 'templates.contact.form.email' | t }}
            <span aria-hidden="true">*</span></label
          >
          {%- if form.errors contains 'email' -%}
            <small class="contact__field-error" id="ContactForm-email-error">
              <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
              <span class="form__message">
                <span class="svg-wrapper">
                  {{- 'icon-error.svg' | inline_asset_content -}}
                </span>
                {{- form.errors.translated_fields.email | capitalize }}
                {{ form.errors.messages.email -}}
              </span>
            </small>
          {%- endif -%}
        </div>
      </div>
      <div class="field">
        <input
          type="tel"
          id="ContactForm-phone"
          class="field__input"
          autocomplete="tel"
          name="contact[{{ 'templates.contact.form.phone' | t }}]"
          pattern="[0-9\-]*"
          value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
          placeholder="{{ 'templates.contact.form.phone' | t }}"
        >
        <label class="field__label" for="ContactForm-phone">{{ 'templates.contact.form.phone' | t }}</label>
      </div>
      <div class="field">
        <textarea
          rows="10"
          id="ContactForm-body"
          class="text-area field__input"
          name="contact[{{ 'templates.contact.form.comment' | t }}]"
          placeholder="{{ 'templates.contact.form.comment' | t }}"
        >
          {{- form.body -}}
        </textarea>
        <label class="form__label field__label" for="ContactForm-body">
          {{- 'templates.contact.form.comment' | t -}}
        </label>
      </div>
      <div class="contact__button">
        <button type="submit" class="button">
          {{ 'templates.contact.form.send' | t }}
        </button>
      </div>
    {%- endform -%}

    <!-- Contact Info Section -->
    {%- if section.settings.show_contact_info -%}
      <div class="contact-info">
        {%- if section.settings.address != blank -%}
          <div class="contact-info__item">
            <div class="contact-info__icon">üìç</div>
            <h3 class="contact-info__title">Address</h3>
            <p class="contact-info__text">{{ section.settings.address }}</p>
          </div>
        {%- endif -%}
        {%- if section.settings.phone != blank or section.settings.phone2 != blank -%}
          <div class="contact-info__item">
            <div class="contact-info__icon">üìû</div>
            <h3 class="contact-info__title">Phone / WhatsApp</h3>
            <p class="contact-info__text">
              {%- if section.settings.phone != blank -%}
                {%- assign phone_clean = section.settings.phone | replace: ' ', '' | replace: '+', '' | replace: '-', '' | replace: '(', '' | replace: ')', '' -%}
                <a href="https://wa.me/{{ phone_clean }}" target="_blank" style="color: inherit; text-decoration: none; display: block; margin-bottom: 0.5rem;">
                  {{ section.settings.phone }}
                </a>
              {%- endif -%}
              {%- if section.settings.phone2 != blank -%}
                {%- assign phone2_clean = section.settings.phone2 | replace: ' ', '' | replace: '+', '' | replace: '-', '' | replace: '(', '' | replace: ')', '' -%}
                <a href="https://wa.me/{{ phone2_clean }}" target="_blank" style="color: inherit; text-decoration: none; display: block;">
                  {{ section.settings.phone2 }}
                </a>
              {%- endif -%}
            </p>
          </div>
        {%- endif -%}
        {%- if section.settings.email != blank or section.settings.email2 != blank -%}
          <div class="contact-info__item">
            <div class="contact-info__icon">‚úâÔ∏è</div>
            <h3 class="contact-info__title">Email</h3>
            <p class="contact-info__text">
              {%- if section.settings.email != blank -%}
                <a href="mailto:{{ section.settings.email }}" style="color: inherit; text-decoration: none; display: block; margin-bottom: 0.5rem;">
                  {{ section.settings.email }}
                </a>
              {%- endif -%}
              {%- if section.settings.email2 != blank -%}
                <a href="mailto:{{ section.settings.email2 }}" style="color: inherit; text-decoration: none; display: block;">
                  {{ section.settings.email2 }}
                </a>
              {%- endif -%}
            </p>
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    <!-- Map Section -->
    {%- if section.settings.show_map and section.settings.map_embed_code != blank -%}
      <div class="contact-map-container">
        <div class="contact-map-overlay"></div>
        {{ section.settings.map_embed_code }}
      </div>
    {%- elsif section.settings.show_map and section.settings.map_address != blank -%}
      <div class="contact-map-container">
        <div class="contact-map-overlay"></div>
        <iframe
          src="https://www.google.com/maps/embed/v1/place?key=AIzaSyBeXvmc4XdzuvbkenMu7HRNNYJGWWO-a9g&q={{ section.settings.map_address | url_encode }}"
          width="100%"
          height="450"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade">
        </iframe>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.contact-form.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "t:sections.contact-form.settings.title.default",
      "label": "t:sections.contact-form.settings.title.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        },
        {
          "value": "hxxl",
          "label": "t:sections.all.heading_size.options__5.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "header",
      "content": "Contact Information"
    },
    {
      "type": "checkbox",
      "id": "show_contact_info",
      "label": "Show contact information",
      "default": true
    },
    {
      "type": "textarea",
      "id": "address",
      "label": "Store Address",
      "default": "82 Leeds Rd, Mount Waverley VIC 3149, Australia"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone / WhatsApp Number 1",
      "default": "+61 411 667 671"
    },
    {
      "type": "text",
      "id": "phone2",
      "label": "Phone / WhatsApp Number 2",
      "default": "+61 385 189 615"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address 1",
      "default": "sales@eazyagro.com"
    },
    {
      "type": "text",
      "id": "email2",
      "label": "Email Address 2",
      "default": "Info@eazyagro.com"
    },
    {
      "type": "header",
      "content": "Map Settings"
    },
    {
      "type": "checkbox",
      "id": "show_map",
      "label": "Show map",
      "default": true
    },
    {
      "type": "text",
      "id": "map_address",
      "label": "Store Address for Map",
      "info": "Enter the full address for Google Maps",
      "default": "82 Leeds Rd, Mount Waverley VIC 3149, Australia"
    },
    {
      "type": "html",
      "id": "map_embed_code",
      "label": "Map Embed Code (Optional)",
      "info": "If you have a custom map embed code, paste it here. Otherwise, the address above will be used."
    }
  ],
  "presets": [
    {
      "name": "t:sections.contact-form.presets.name"
    }
  ]
}
{% endschema %}
