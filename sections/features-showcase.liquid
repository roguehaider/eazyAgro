{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .features-showcase {
    background-color: #F7F6F1;
  }

  .features-showcase__grid {
    gap: 3rem;
    align-items: center;
  }

  .features-showcase__features-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2.5rem;
  }

  .features-showcase__feature-block {
    background-color: white;
    padding: 2.5rem;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-align: center;
  }

  .features-showcase__feature-block:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  }

  .features-showcase__feature-icon {
    width: 48px;
    height: 48px;
    margin: 0 auto 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #6CA93A;
  }

  .features-showcase__feature-icon svg {
    width: 100%;
    height: 100%;
    stroke: currentColor;
    fill: currentColor;
  }

  .features-showcase__feature-title {
    font-size: 1.6rem;
    font-weight: 700;
    color: rgba(var(--color-foreground), 0.9);
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .features-showcase__feature-description {
    font-size: 1.4rem;
    color: rgba(var(--color-foreground), 0.75);
    line-height: 1.6;
  }

  .features-showcase__image-carousel {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .features-showcase__image-carousel .slider-button {
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 50%;
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .features-showcase__image-carousel .slider-button:hover {
    background-color: #6CA93A;
    color: white;
  }

  .features-showcase__image-carousel .slider-button svg {
    width: 20px;
    height: 20px;
  }

  .features-showcase__image-wrapper {
    border-radius: 12px;
    overflow: hidden;
    position: relative;
    display: block;
    width: 100%;
  }

  .features-showcase__image-wrapper img {
    width: 100%;
    height: auto;
    display: block;
    position: relative;
    object-fit: cover;
    border-radius: 12px;
  }

  .features-showcase__text-item {
    padding: 2rem 0;
  }

  .features-showcase__image-item {
    padding: 1rem 0;
  }

  @media screen and (max-width: 749px) {
    .features-showcase__features-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .features-showcase__feature-block {
      padding: 2rem;
    }

    .features-showcase__feature-icon {
      width: 40px;
      height: 40px;
      margin-bottom: 1.2rem;
    }

    .features-showcase__feature-title {
      font-size: 1.4rem;
    }

    .features-showcase__feature-description {
      font-size: 1.3rem;
    }
  }

  @media screen and (min-width: 750px) {
    .features-showcase__text-item {
      padding-right: 2rem;
    }

    .features-showcase__image-item {
      padding-left: 2rem;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }} features-showcase">
  <div class="page-width">
    <div class="features-showcase__grid grid grid--1-col grid--2-col-tablet grid--gapless">
      <!-- Features Grid -->
      <div class="features-showcase__text-item grid__item">
        <div class="features-showcase__features-grid">
          {%- for block in section.blocks -%}
            {%- if block.type == 'feature' -%}
              <div class="features-showcase__feature-block" {{ block.shopify_attributes }}>
                {%- if block.settings.icon_svg != blank -%}
                  <div class="features-showcase__feature-icon">
                    {{ block.settings.icon_svg }}
                  </div>
                {%- elsif block.settings.icon_text != blank -%}
                  <div class="features-showcase__feature-icon" style="font-size: 3.2rem;">
                    {{ block.settings.icon_text }}
                  </div>
                {%- endif -%}
                
                {%- if block.settings.title != blank -%}
                  <h3 class="features-showcase__feature-title">{{ block.settings.title }}</h3>
                {%- endif -%}
                
                {%- if block.settings.description != blank -%}
                  <p class="features-showcase__feature-description">{{ block.settings.description }}</p>
                {%- endif -%}
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>

      <!-- Image Carousel -->
      <div class="features-showcase__image-item grid__item">
        {%- assign image_blocks = section.blocks | where: 'type', 'image' -%}
        {%- if image_blocks.size > 0 -%}
          <slideshow-component
            class="features-showcase__image-carousel"
            role="region"
            aria-roledescription="Image carousel"
            aria-label="Feature images"
          >
            {%- if image_blocks.size > 1 and section.settings.auto_rotate -%}
              <div class="slideshow__controls slideshow__controls--top slider-buttons">
                <button
                  type="button"
                  class="slider-button slider-button--prev"
                  name="previous"
                  aria-label="Previous image"
                  aria-controls="Slider-{{ section.id }}"
                >
                  <span class="svg-wrapper">
                    {{- 'icon-caret.svg' | inline_asset_content -}}
                  </span>
                </button>
                <div class="slider-counter slider-counter--dots">
                  <div class="slideshow__control-wrapper">
                    {%- for block in image_blocks -%}
                      <button
                        class="slider-counter__link slider-counter__link--dots link"
                        aria-label="Go to slide {{ forloop.index }}"
                        aria-controls="Slider-{{ section.id }}"
                      >
                        <span class="dot"></span>
                      </button>
                    {%- endfor -%}
                  </div>
                </div>
                <button
                  type="button"
                  class="slider-button slider-button--next"
                  name="next"
                  aria-label="Next image"
                  aria-controls="Slider-{{ section.id }}"
                >
                  <span class="svg-wrapper">
                    {{- 'icon-caret.svg' | inline_asset_content -}}
                  </span>
                </button>
              </div>
            {%- endif -%}

            <div
              class="grid grid--1-col slider slider--everywhere"
              id="Slider-{{ section.id }}"
              aria-live="polite"
              aria-atomic="true"
              {% if section.settings.auto_rotate %}
                data-autoplay="true"
                data-speed="{{ section.settings.change_slides_speed }}"
              {% endif %}
            >
              {%- for block in image_blocks -%}
                <div
                  class="slideshow__slide slider__slide grid__item grid--1-col"
                  id="Slide-{{ section.id }}-{{ forloop.index }}"
                  {{ block.shopify_attributes }}
                  role="group"
                  aria-label="{{ forloop.index }} of {{ image_blocks.size }}"
                  tabindex="-1"
                >
                  <div class="features-showcase__image-wrapper">
                    {%- if block.settings.image != blank -%}
                      {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
                      {%- capture sizes -%}
                        (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                        (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                      {%- endcapture -%}
                      {{
                        block.settings.image
                        | image_url: width: 1500
                        | image_tag: sizes: sizes, widths: widths, loading: 'lazy'
                      }}
                    {%- else -%}
                      <div class="placeholder" style="padding-bottom: 66.67%; background-color: #D1E4B9; border-radius: 12px;">
                        <span class="visually-hidden">Image placeholder</span>
                      </div>
                    {%- endif -%}
                  </div>
                </div>
              {%- endfor -%}
            </div>
          </slideshow-component>
        {%- else -%}
          <!-- Placeholder if no images -->
          <div class="features-showcase__image-carousel">
            <div class="placeholder" style="padding-bottom: 66.67%; background-color: #D1E4B9; border-radius: 12px;">
              <span class="visually-hidden">Image placeholder - add images in section settings</span>
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

